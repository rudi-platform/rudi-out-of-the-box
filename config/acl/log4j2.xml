<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="basePath">/var/log/rudi/acl</Property>
    </Properties>
 
    <Appenders>
        <RollingFile name="fileLogger" fileName="${basePath}/rudi-acl.log" filePattern="${basePath}/rudi-acl-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
			<Policies>
        		<SizeBasedTriggeringPolicy size="10MB" />
    		</Policies>
    		<DefaultRolloverStrategy max="5" />
        </RollingFile>
 		<RollingFile name="apiLogger" fileName="${basePath}/rudi-api-acl.log" filePattern="${basePath}/rudi-api-rudi-acl-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
        		<SizeBasedTriggeringPolicy size="10MB" />
    		</Policies>
    		<DefaultRolloverStrategy max="5" />
        </RollingFile>        
 
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
		<Logger name="org.rudi.common.facade.aop.FacadeAspect" level="INFO" additivity="false">
            <appender-ref ref="apiLogger" level="INFO" />
            <appender-ref ref="console" level="INFO" />
        </Logger>   
        <Logger name="org.springframework" level="INFO" additivity="false">
            <appender-ref ref="fileLogger" level="INFO" />
            <appender-ref ref="console" level="INFO" />
        </Logger>
        <Logger name="org.rudi" level="INFO" additivity="false">
            <appender-ref ref="fileLogger" level="INFO" />
            <appender-ref ref="console" level="INFO" />
        </Logger>        
        <Root level="INFO" additivity="false">
            <appender-ref ref="console" />
        </Root>
    </Loggers>
</Configuration>
